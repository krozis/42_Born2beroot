#Defines number of tentatives
Defaults	passwd_tries=3

#Defines the message in case of incorrect password
Defaults	badpass_message="Incorrect password, try again."

#Set to on the sudo input/output logs, and defines the directory where they're archived
Defaults	log_input, log_output, iolog_dir="/var/log/sudo"

#Active TTY mode 
Defaults	requiretty

#Defines the restricted paths used by sudo
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"
